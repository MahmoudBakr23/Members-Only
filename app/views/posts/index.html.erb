<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <strong><%= member_check?(post) %></strong><br />
        <small><%= member_username_check?(post) %></small><br />
        <hr>
        <%= show_post?(post) %><br />
        <hr>
        <%= show_show?(post) %><br />
        <%= show_edit?(post) %><br />
        <%= show_destroy?(post) %><br />
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+', new_post_path, class: 'btn-floating btn-small waves-effect waves-light red'%>
