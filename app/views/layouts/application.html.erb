<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
      <% if flash[:notice]%>
        <p class="notice"><%= notice %></p>
    <% end %>
    <% if flash[:alert]%>
        <p class="alert"><%= alert %></p>
    <%end%>
    <% if member_signed_in? %>
      <%= link_to current_member.name, edit_member_registration_path, class: 'waves-effect waves-teal btn-flat' %>
      <%= link_to 'Logout', destroy_member_session_path, method: :delete, data: { confirm: "Are you sure you want to logout?" },class: 'waves-effect  green accent-2 btn-small' %>
    <% else %>
      <%= link_to 'Login', new_member_session_path,class: 'waves-effect  light-blue accent-3 btn-small' %>
      <%= link_to 'Register', new_member_registration_path, class: 'waves-effect  green accent-2 btn-small'%>
    <% end %>
    <%= yield %>
    </div>
  </body>
</html>
